<%= render 'layouts/frame' do %>
  <body>
    <main class="main" id="top">
      <div class="container-fluid">
        <div class="row min-vh-100 flex-center no-gutters">
          <div class="col-lg-8 col-xxl-5 py-3">
            <!-- 背景图 -->
            <%= image_pack_tag 'bg-shape.png', class: 'bg-auth-circle-shape', width: 250, alt: '' %>
            <%= image_pack_tag 'shape-1.png', class: 'bg-auth-circle-shape-2', width: 150, alt: '' %>

            <!-- 表单区 开始 -->
            <div class="card overflow-hidden z-index-1">
              <div class="card-body p-0">
                <div class="row no-gutters h-100">
                  <!-- 左侧信息 -->
                  <div class="col-md-5 text-white text-center bg-card-gradient">
                    <div class="position-relative p-4 pt-md-5 pb-md-7">
                      <div class="bg-holder bg-auth-card-shape"></div>

                      <div class="z-index-1 position-relative">
                        <%= link_to ENV['APP_NAME'], root_path, class: 'text-white mb-4 text-sans-serif font-weight-extra-bold fs-4 d-inline-block text-decoration-none' %>
                        <p class="text-white opacity-75">With the power of Falcon, you can now focus only on functionaries for your digital products, while leaving the UI design on us!</p>
                      </div>
                    </div>
                    <div class="mt-3 mb-4 mt-md-4 mb-md-5">
                      <p>
                        还没有账号?<br>
                        <%= link_to '立刻注册', new_user_registration_path, class: 'text-white text-underline' %>
                      </p>

                      <p class="mb-0 mt-4 mt-md-5 fs--1 font-weight-semi-bold text-white opacity-75">
                        <%= link_to "《服务条款》", terms_path, class: 'text-underline text-white' %>
                        和 <%= link_to "《隐私政策》", privacy_path, class: 'text-underline text-white' %>
                      </p>
                    </div>
                  </div>

                  <!-- 右侧表单 -->
                  <div class="col-md-7 d-flex flex-center">
                    <div class="p-4 p-md-5 flex-grow-1">
                      <%= yield %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- 表单区 结束 -->
          </div>
        </div>
      </div>
    </main>
  </body>
<% end %>
