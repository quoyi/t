<% unless flash.blank? && flash.empty? %>
  <div class="toast-container position-fixed b-0 r-0 mb-2 pr-2 w-25">
    <% flash.keys.each do |key| %>
      <div class="toast toast-<%= toast_type_by(key) %> m-1" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <i class="mr-2 fas fa-<%= toast_type_by(key) %>"></i>
          <strong class="mr-auto"><%= toast_title_by(key) %></strong>
          <%# <small>11 mins ago</small> %>
          <button class="ml-2 mb-1 close" type="button" data-dismiss="toast" aria-label="关闭">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="toast-body">
          <%= flash[key] %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>